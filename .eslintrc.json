{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./"
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "airbnb"
  ],
  "rules": {
    "max-len": [2, 120],
    "@typescript-eslint/no-unused-vars": 2,
    "import/prefer-default-export": 0,
    "import/no-default-export": 2,
    "import/extensions": 0,
    "no-underscore-dangle": 0,
    "no-shadow": 0
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
